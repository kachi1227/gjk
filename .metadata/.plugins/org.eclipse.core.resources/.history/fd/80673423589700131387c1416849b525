public void NewAccountRequest (String new_Firstname, String new_Lastname, String new_bio, String new_avi, String new_email,
		String newPassword){
	firstName = new_Firstname;
	lastName = new_Lastname;
	bio = new_bio;
	stringBitMapAvi = new_avi;
	email = new_email;
	password = newPassword;
	JsonObject parcel = new JsonObject();
	parcel.put("first name", firstName);
	parcel.put("last name", lastName);
	parcel.put("bio", bio);
	//parcel.put("avi", stringBitMapAvi);
	parcel.put("email", email);
	parcel.put("password", password);
	
	String register_ = register;//append to BASE_URL to complete registerURI
	executeWithJson(register_, parcel);

	
}

public void loginRequest( String loginEmail, String pword){
		JsonObject parcel = new JsonObject();
		
		parcel.put("email", loginEmail);
		parcel.put("password",pword);
		
		String login_ = login;//append to BASE_URL to complete loginURI
		
		executeWithJson(login_, parcel);	
	
	
}


